.body
  .flash-notice
    %p グループを作成しました
  .leftcontent
    .leftcontent__header
      %p name
      %ul
        %li
          =link_to "" do
            = fa_icon 'edit'
        %li
          =link_to "" do
            =fa_icon "cog"
    .leftcontent__main
      %p{class: "leftcontent__main-groupname"} group
      %P{class: "leftcontent__main-message"} message
  .rightcontent
    .rightcontent__header
      .rightcontent__header--group
        %p{class: "rightcontent__header--group-groupname"} group
        %p{class: "rightcontent__header--group-member"} menber:name
      =link_to("Edit" , "" ,class:"rightcontent__header--edit")
    .rightcontent__main
      .rightcontent__main-heading
        %p{class: "rightcontent__main-heading-name"} name
        %p{class: "rightcontent__main-heading-date"} 2019/08/19
      %p{class: "rightcontent__main-message"} message
    %form{:action=>"/", :method=>"post", class: "rightcontent--form"}
      .rightcontent--form--wrapper
        %input{:name=>"message", class: "rightcontent--form--wrapper-input",placeholder:"type a message"}
        = fa_icon 'image',class:"rightcontent--form--wrapper-image"
      %input{type:"submit", value: "Send", class:"rightcontent--form--submit"}

